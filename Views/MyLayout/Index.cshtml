<a data-toggle="dropdown" href="#">
    <span class="glyphicon glyphicon-bell text-xxl-center"> @ViewBag.notifiCount </span>
</a>
<ul class="dropdown-menu overflow-auto" data-bs-spy="scroll" data-bs-offset="20" style="max-height: 200px; width:250px">
    @if (ViewBag.notifiCount > 0)
    {
        foreach (var category in ViewBag.notifi)
        {
            <li style="margin:0">

                @if (category.Message.Contains("Oceń"))
                {
                    <button class="well-sm well" style="margin: 0; text-align: center; width: 248px; height: 60px">
                        <a style="margin:0; padding:0;" href="@Url.Action("DeleteAndViewProfile", "MyLayout", new { idNotifications = category.ID, idProfile = category.Offer.Profile.ID })">
                            @category.Message
                        </a>
                    </button>
                }
                else
                {
                    <button class="well-sm well" style="margin: 0; text-align: center; width: 248px; height: 60px ">
                        <a style="margin:0; padding:0;" href="@Url.Action("DeleteAndViewOffer", "MyLayout", new { idNotifications = category.ID, idOffer = category.Offer.ID })">
                            @category.Message

                        </a>
                    </button>
                }
            </li>
        }
        <li>
            @Html.ActionLink("Usuń wszystkie powiadomienia","DeleteAllNotifications","MyLayout",null, new { @class = "button btn-default well", style= "margin:0; text-align: center; width: 248px; height: 25px"})
        </li>
    }
    else
    {
        <p style="text-align:center"> brak powiadomień</p>
    }
</ul>